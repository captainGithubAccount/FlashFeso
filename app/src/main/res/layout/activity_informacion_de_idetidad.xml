<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F2F2F2"
    android:orientation="vertical"
    tools:context=".flashfeso.ui.controll.activity.InformacionDeIdetidadActivity">

    <include
        android:id="@+id/header"
        layout="@layout/incl_common_bar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_140"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_18"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/bg_information_supplement_head_img"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_13"
                android:paddingRight="@dimen/dp_28"
                android:paddingBottom="@dimen/dp_15">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/dp_55"
                    android:text="@string/informacion_de_idetidad"
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="@string/para_poder_aprobar_tu_prestamo"
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="@dimen/sp_13" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_26"
                    android:layout_marginTop="@dimen/dp_20">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="@string/five"
                        android:textColor="@color/color_FFFFFF"
                        android:textSize="@dimen/sp_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="@string/six"
                        android:textColor="@color/color_FFFFFF"
                        android:textSize="@dimen/sp_17" />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_120"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/bg_white_10"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15">

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_weight="1"
                    android:text="@string/frente_de_ine"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:id="@+id/frante_img"
                    android:layout_width="@dimen/dp_138"
                    android:layout_height="@dimen/dp_86"
                    android:src="@drawable/icon_document_photo"
                    android:scaleType="fitXY" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_120"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/bg_white_10"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15">

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_weight="1"
                    android:text="@string/detras_de_ine"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:id="@+id/detras_img"
                    android:layout_width="@dimen/dp_138"
                    android:layout_height="@dimen/dp_86"
                    android:src="@drawable/icon_document_photo"
                    android:scaleType="fitXY" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_120"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/bg_white_10"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15">

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_weight="1"
                    android:text="@string/selfies_de_tu_rostro_completo"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:id="@+id/selfies_img"
                    android:layout_width="@dimen/dp_138"
                    android:layout_height="@dimen/dp_86"
                    android:src="@drawable/icon_document_photo"
                    android:scaleType="fitXY" />

            </LinearLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/bg_white_10"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="@dimen/dp_15">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/curp"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/sp_13" />

                    <com.example.lwj_common.common.ui.controll.view.CommonClearEditText
                        android:id="@+id/curp_tv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:background="@null"
                        android:drawableRight="@drawable/delete_big_icon"
                        android:drawablePadding="@dimen/dp_10"
                        android:gravity="right|center_vertical"
                        android:hint="@string/ingresa_por_favor"
                        android:maxLength="18"
                        android:textColor="@color/color_333333"
                        android:textColorHint="@color/color_999999"
                        android:textSize="@dimen/sp_13" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/apellido_paterno"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/sp_13" />

                    <com.example.lwj_common.common.ui.controll.view.CommonClearEditText
                        android:id="@+id/apellido_paterno_tv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:maxLength="50"
                        android:drawableRight="@drawable/delete_big_icon"
                        android:drawablePadding="@dimen/dp_10"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:hint="@string/ingresa_por_favor"
                        android:textColor="@color/color_333333"
                        android:textColorHint="@color/color_999999"
                        android:textSize="@dimen/sp_13" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/apellido_materno"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/sp_13" />

                    <com.example.lwj_common.common.ui.controll.view.CommonClearEditText
                        android:id="@+id/apellido_materno_tv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:maxLength="50"
                        android:drawableRight="@drawable/delete_big_icon"
                        android:drawablePadding="@dimen/dp_10"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:hint="@string/ingresa_por_favor"
                        android:textColor="@color/color_333333"
                        android:textColorHint="@color/color_999999"
                        android:textSize="@dimen/sp_13" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nombre_completo"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/sp_13" />

                    <com.example.lwj_common.common.ui.controll.view.CommonClearEditText
                        android:id="@+id/nombre_completo_tv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:maxLength="50"
                        android:drawableRight="@drawable/delete_big_icon"
                        android:drawablePadding="@dimen/dp_10"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:hint="@string/ingresa_por_favor"
                        android:textColor="@color/color_333333"
                        android:textColorHint="@color/color_999999"
                        android:textSize="@dimen/sp_13" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/homoclave_de_rfc"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/sp_13" />

                    <com.example.lwj_common.common.ui.controll.view.CommonClearEditText
                        android:id="@+id/rfc_tv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:maxLength="50"
                        android:drawableRight="@drawable/delete_big_icon"
                        android:drawablePadding="@dimen/dp_10"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:hint="@string/ingresa_por_favor"
                        android:textColor="@color/color_333333"
                        android:textColorHint="@color/color_999999"
                        android:textSize="@dimen/sp_13" />

                </LinearLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/confirm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_50"
                android:layout_marginBottom="@dimen/dp_30"
                android:background="@drawable/bg_default_10"
                android:gravity="center"
                android:text="@string/siguiente"
                android:textColor="@color/color_FFFFFF"
                android:textSize="@dimen/sp_18" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</LinearLayout>