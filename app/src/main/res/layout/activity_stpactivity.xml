<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/color_F2F2F2"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".flashfeso.ui.controll.activity.STPActivity">

    <include
        android:id="@+id/header"
        layout="@layout/incl_common_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_main_background"
        android:orientation="vertical"
        android:padding="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:text="@string/clabe"
            android:textColor="@color/color_FFFFFF"
            android:textSize="@dimen/sp_17" />

        <LinearLayout
            android:id="@+id/number_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_16"
            android:paddingRight="@dimen/dp_25"
            android:paddingBottom="@dimen/dp_26">

            <TextView
                android:id="@+id/number_tv"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/color_FFFFFF"
                android:textSize="@dimen/sp_26" />

            <ImageView
                android:layout_width="@dimen/dp_23"
                android:layout_height="@dimen/dp_23"
                android:scaleType="fitXY"
                android:layout_marginTop="@dimen/dp_6"
                android:src="@drawable/icon_copy_white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/banco2"
                android:textColor="@color/color_FFFFFF"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/banco_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_FFFFFF"
                android:textSize="@dimen/sp_15" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_40">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/beneficlario"
                android:textColor="@color/color_FFFFFF"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/beneficlario_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_FFFFFF"
                android:textSize="@dimen/sp_15" />

        </LinearLayout>

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:background="@drawable/bg_white_10"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_36"
            android:paddingBottom="@dimen/dp_30">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_15"
                android:text="@string/la_cuenta_es_unica_por_cliente"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:layout_marginTop="@dimen/dp_16"
                android:textSize="@dimen/sp_20"
                android:text="@string/notas_importantes"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_15"
                android:layout_marginTop="@dimen/dp_6"
                android:text="@string/puedes_realizar_montos"/>

            <TextView
                android:id="@+id/stp_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_15"
                android:layout_marginTop="@dimen/dp_6"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>