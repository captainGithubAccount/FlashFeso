<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_F2F2F2"
    android:orientation="vertical"
    tools:context=".flashfeso.ui.controll.activity.OpenPayActivity">

    <include
        android:id="@+id/header"
        layout="@layout/incl_common_bar" />

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/stl_nav"
        app:tl_indicator_anim_duration="80"
        app:tl_indicator_color="@color/color_main_background"
        app:tl_indicator_height="@dimen/dp_2"
        app:tl_indicator_width="@dimen/dp_90"
        app:tl_textsize="@dimen/sp_17"
        app:tl_textSelectColor="@color/color_main_background"
        app:tl_textUnselectColor="@color/color_666666"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_28"
        android:background="@color/color_FFFFFF" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/color_FFFFFF" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/open_pay_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_FFFFFF" />

</LinearLayout>