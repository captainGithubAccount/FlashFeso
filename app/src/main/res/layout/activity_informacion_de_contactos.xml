<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F2F2F2"
    android:orientation="vertical"
    tools:context=".flashfeso.ui.controll.activity.InformacionDeContactosActivity">


    <include
        android:id="@+id/header"
        layout="@layout/incl_common_bar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_140"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_18"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/bg_information_supplement_head_img"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_13"
                android:paddingRight="@dimen/dp_28"
                android:paddingBottom="@dimen/dp_25">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:text="@string/informacion_de_contactos"
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="@string/ingresa_datos_de_tus_contactos"
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="@dimen/sp_13" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_26"
                    android:layout_marginTop="@dimen/dp_20">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="@string/four"
                        android:textColor="@color/color_FFFFFF"
                        android:textSize="@dimen/sp_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="@string/six"
                        android:textColor="@color/color_FFFFFF"
                        android:textSize="@dimen/sp_17" />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_17"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/bg_white_10"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="@string/referencia_1"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_18" />

                <LinearLayout
                    android:id="@+id/relatives_one_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/relacion_contigo"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/relatives_one_tv"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:hint="@string/por_favor_elige"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/sp_12" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:src="@drawable/icon_arrow_down" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/personal_phone_one_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/numero_de_celular"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/personal_phone_one_tv"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:hint="@string/por_favor_elige"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/sp_12" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:src="@drawable/icon_maillist" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/nombre_completo"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_12" />

                    <com.example.lwj_common.common.ui.controll.view.ClearEditText
                        android:id="@+id/personal_name_one_et"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/dp_4"
                        android:layout_marginBottom="@dimen/dp_4"
                        android:maxLength="50"
                        android:drawableRight="@drawable/delete_big_icon"
                        android:drawablePadding="@dimen/dp_10"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:textColor="@color/color_666666"
                        android:textColorHint="@color/color_999999"
                        android:textSize="@dimen/sp_12" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_17"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/bg_white_10"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="@string/referencia_2"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_18" />

                <LinearLayout
                    android:id="@+id/relatives_two_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/relacion_contigo"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/relatives_two_tv"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:hint="@string/por_favor_elige"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/sp_12" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:src="@drawable/icon_arrow_down" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/personal_phone_two_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/numero_de_celular"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/personal_phone_two_tv"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:hint="@string/por_favor_elige"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/sp_12" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:src="@drawable/icon_maillist" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/nombre_completo"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_12" />

                    <com.example.lwj_common.common.ui.controll.view.ClearEditText
                        android:id="@+id/personal_name_two_et"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:maxLength="50"
                        android:drawableRight="@drawable/delete_big_icon"
                        android:drawablePadding="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_4"
                        android:layout_marginBottom="@dimen/dp_4"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:textColor="@color/color_666666"
                        android:textColorHint="@color/color_999999"
                        android:textSize="@dimen/sp_12" />


                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/confirm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_50"
                android:layout_marginBottom="@dimen/dp_30"
                android:background="@drawable/bg_default_10"
                android:gravity="center"
                android:text="@string/siguiente"
                android:textColor="@color/color_FFFFFF"
                android:textSize="@dimen/sp_18" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>